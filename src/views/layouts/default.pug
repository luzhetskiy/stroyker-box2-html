include ../blocks/components
include ../blocks/cards

doctype html
html(lang='ru')
  head
    meta(charset="utf-8")
    block title
    meta(name='viewport' content='width=device-width, initial-scale=1, maximum-scale=1')
    //favicons
    link(rel='shortcut icon' href=`favicons/favicon.ico`)
    link(rel='icon' type='image/png' sizes='16x16' href=`favicons/favicon-16x16.png`)
    link(rel='icon' type='image/png' sizes='32x32' href=`favicons/favicon-32x32.png`)
    link(rel='icon' type='image/png' sizes='48x48' href=`favicons/favicon-48x48.png`)
    link(rel='icon' type='image/png' sizes='228x228' href=`favicons/coast-228x228.png`)
    //styles
    link(rel="stylesheet" href="styles/theme.css")
    link(rel="stylesheet" href="styles/config.css")
    link(rel="stylesheet" href="styles/common.css")
    block style
    //helper
    link(rel="stylesheet" href="styles/helper.css")

  body
    block variables
    .wrapper(class=header_style=='landing'?'wrapper_landing':'')
      include ../blocks/header
      include ../blocks/mobile-nav
      //main
      main.main(class=content!==undefined?content:'')
        //breadcrumbs
        block breadcrumbs
        //page content
        .content
          block content
      include ../blocks/footer
      include ../blocks/fixed
    
    include ../blocks/popups
    
    //jquery
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js')
    //libs
    script(src="scripts/libs/current-device.min.js")
    script(src="scripts/libs/scroll-lock.min.js")
    script(src="scripts/libs/slick.js")
    script(src="scripts/libs/lazysizes.min.js")
    script.
      lazySizes.cfg.init = false;
      lazySizes.cfg.customMedia = {
        '--small': '(max-width: 575px)',
        '--medium': '(max-width: 991px)',
        '--large': '(max-width: 1279px)',
      };
    script(src="scripts/libs/inputmask.min.js")
    script(src="scripts/libs/validate.min.js")
    script(src="scripts/libs/simplebar.min.js")
    script(src="scripts/libs/jquery.selectric.min.js")
    script(src="scripts/libs/ion.rangeSlider.min.js")
    script(src='scripts/libs/popper.min.js')
    script(src='scripts/libs/tippy.min.js')

    block scripts

    //scripts
    script(src="scripts/main.js")
    
    //preview only
    include ../blocks/helper