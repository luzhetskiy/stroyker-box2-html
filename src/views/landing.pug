  section.section.prp-section.section_padding.section_background-muted
    .container
      .row
        .prp-section__container.col-lg-6
          .prp-section__content 
            h2.h1.section__title.text-uppercase.font2 АКЦИЯ! ВЫБЕРИТЕ ПОДАРОК ОТ STROYKER.PRO
            form(action="#").form.js-validation
              .row
                .form__group.col-12
                  .form__group-content.row
                    -var index = 0
                    mixin checkbox(title)
                      .form__input.col-12
                        .radio
                          input(type="radio" id=index name='1').radio__input
                          label(for=index).radio__label=title
                      -index++
                    
                    +checkbox('Бесплатный аудит вашего сайта')
                    +checkbox('Бесплатное SEO продвижение')
                    +checkbox('Бесплатный Строительный сайт')

                .form__group.col-12
                  .form__group-content.row
                    .form__input.col-sm-6
                      .input
                        input(type="text" name='phone' placeholder="Адрес вашего сайта").input__element
                        span.input__label Адрес вашего сайта
                    .form__input.col-sm-6
                      .input
                        input(type="text" name='phone' placeholder="Телефон*").input__element.required.phone
                        span.input__label Телефон
                .form__bottom.col-12
                  button.button.button_style-2.form__submit Отправить

        .prp-section__slider.col-lg-6
          .photo-slider.slider.slider_arrows
            //slide image
            .photo-slider__slide.image.image_cover
              img(data-src="img/image 28.jpg", alt="image").lazyload

