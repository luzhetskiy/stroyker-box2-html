        +card7('','col')
        +card7('','col')
        +card7('','col')
        +card7('','col')
        +card7('','col')
        +card7('','col')
      

  section.section.personal-form.section_padding.section_background-muted
    .container
      .row 
        .personal-form__text.col-xl-8.col-lg-7
          h2.personal-form__title.font2 НЕ ЗАБУДЬТЕ УЗНАТЬ СВОЮ ЛИЧНУЮ СКИДКУ
          p.personal-form__text Гарантируем скидку при использовании этой формы
