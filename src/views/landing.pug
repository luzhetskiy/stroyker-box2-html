extends layouts/default

block title
  title Лендинг

block variables
  -header_style = 'landing'

block style 
  link(rel='preconnect' href='https://fonts.gstatic.com')
  link(href='https://fonts.googleapis.com/css2?family=Russo+One&display=swap' rel='stylesheet')


block content 
  //banner
  section.section.home-banner.landing-banner.slider.slider_arrows.slider_dots
    .home-banner__slide.landing-banner__slide
      .image.image_cover
        img(data-src="./img/Group 732.jpg", alt="image").lazyload
      .container
        .landing-banner__form
          h2.landing-banner__form-title УЗНАЙТЕ СВОЮ ЛИЧНУЮ СКИДКУ
          h3.landing-banner__form-subtitle.font2 Гарантируем скидку при использовании этой формы
          form(action="#").subscription.landing-banner__form-subscription
            .input.subscription__input
              input(type="text" placeholder="Номер телефона").input__element.subscription__input-element.phone
            button(type="submit").button.button_style-2.subscription__button ОТПРАВИТЬ
    
    a(href="#").home-banner__slide.landing-banner__slide.image.image_cover
      img(data-src="./img/Group 732.jpg", alt="image").lazyload

  section.section.section-text-image
    .container 
      .row 
        .section-text-image__content.col-lg-6   
          h2.section__title.text-uppercase.font2 КОРОТКО О компании  
