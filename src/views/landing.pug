  section.section
    .container
      h2.section__title.text-uppercase.font2 Новости и акции
      .slider.slider_grid.row.slider_3h
        include blocks/cards
        +news-card(1, 'col')
        +news-card(2, 'col')
        +news-card(1, 'col')
        +news-card(2, 'col')
