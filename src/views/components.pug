      .d-grid.row-gap-25.column-gap-grid.grid-columns-md-2.grid-columns-lg-3
        +content-background-box({
          background: true,
          text: true
        })
        +content-background-box({
          image: true,
          imageSrc: './img/image 35.jpg',
          text: true
        })
        +content-background-box({
          image: true
        })

  section.section
    .container
      h2.section__title Картинка(опционально) + галерея(опционально) + текст(опционально)
      .d-grid.row-gap-25.column-gap-grid.grid-columns-md-2.grid-columns-lg-3
