      .d-grid.gap-grid.row-gap-sm-20.grid-columns-2.grid-columns-md-3.grid-columns-lg-4.grid-columns-xl-5
        +product-card-v2({
          
        })
        +product-card-v2({
          style: '2'
        })
        +product-card-v2({
          style: '3'
        })

  section.section
    .container  
      .mb-25
        h2.mb-20 Превью товаров 
          span.text-color-accent 2.1
