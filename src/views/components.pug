  section.section
    .container  
      .mb-25
        h2.mb-20 Превью товаров 
          span.text-color-accent 1.0

      .d-grid.gap-grid.row-gap-sm-20.grid-columns-sm-2.grid-columns-md-3.grid-columns-lg-4.grid-columns-xl-5

        +card4(true,  '', 4, 'Фанера ФК 18х1525х1525 мм сорт 4/4')
        +card4(false, '', 1, 'Фанера ФК 18х1525х1525 мм сорт 4/4')
        +card4(false, '', 2, 'Фанера ФК')
        +card4(true,  '', 3, 'Фанера ФК')

  section.section
    .container
      .mb-25
        h2 Превью товаров 
          span.text-color-accent 1.1

      .d-grid.gap-grid.row-gap-sm-20.grid-columns-sm-2.grid-columns-md-3.grid-columns-lg-4.grid-columns-xl-5

        +card4(true,  'product-card_catalogue', 4, 'Фанера ФК 18х1525х1525 мм сорт 4/4')
